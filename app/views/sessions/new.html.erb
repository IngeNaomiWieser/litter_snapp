<div class="container">
  <h1>Log in</h1>

  <div class="well">
    <%=form_tag sessions_path do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= email_field_tag :email,'', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password,'', class: 'form-control' %>
      </div>
      <div>
        <%= submit_tag "Log In" %>
      </div>
    <% end %>
  </div>
</div>
