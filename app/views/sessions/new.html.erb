<div class="container">
  <br><br><br><br><br><br><br>
  <h1 class="col-xs-12 col-sm-offset-2 col-sm-8">Log in please</h1>

  <div class="log_in_form col-xs-12 col-sm-offset-2 col-sm-8">
    <br>
    <%=form_tag sessions_path do %>
      <div class="form-group">
        <%= email_field_tag :email, '', placeholder: 'Email', class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= password_field_tag :password,'', placeholder: 'Password', class: 'form-control' %>
      </div>
      <div>
        <br>
        <%= submit_tag "LOG IN", class: 'btn btn-default' %>
      </div>
    <% end %>
  </div>
</div>
