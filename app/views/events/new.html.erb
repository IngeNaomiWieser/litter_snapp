<%= form_for(@event) do |f|  %>
  <div class="form-group">
    <%= f.label :planned_date %>
    <%= f.date_field :planned_date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :planned_time %>
    <%= f.time_field :planned_time, class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
