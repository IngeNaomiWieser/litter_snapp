
  <div class="container">
    <br><br><br><br><br><br><br>
    <h1 class="col-xs-12 col-sm-offset-2 col-sm-8">Edit Your Event</h1>

    <div class="log_in_form col-xs-12 col-sm-offset-2 col-sm-8">
      <br>
      <%=form_for @event do |f| %>
        <div class="form-group">
          <%= f.text_field :title, placeholder: 'Name of your Event', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.date_field :planned_date, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.time_field :planned_time,  class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.text_area :notes, placeholder: 'Notes you might want to add (optional)', class: 'form-control', id: 'notes_tag' %>
        </div>
        <div>
          <br>
          <%= f.submit "Submit changes", class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
