
  <div class="container">
    <br><br><br><br><br><br><br>
    <h1 class="col-xs-12 col-sm-offset-2 col-sm-8">Edit Your Event</h1>

    <div class="log_in_form col-xs-12 col-sm-offset-2 col-sm-8">
      <br>
      <%=form_tag event_path do %>
        <div class="form-group">
          <%= text_field_tag :title, '', placeholder: 'Name of your Event', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= date_field_tag :planned_date, '', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= time_field_tag :planned_time, '', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= text_field_tag :notes,'', placeholder: 'Notes you might want to add (optional)', class: 'form-control', id: 'notes_tag' %>
        </div>
        <div>
          <br>
          <%= submit_tag "Submit changes", class: 'btn btn-default' %>
        </div>
      <% end %>
    </div>
  </div>
